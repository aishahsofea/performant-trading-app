{
  "name": "performant-trading-app",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.0.0",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "type-check": "turbo run type-check",
    "lighthouse:website": "pnpm run lhci --workspace=apps/dashboard",
    "prepare": "husky"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.1.4",
    "turbo": "^2.5.5",
    "typescript": "^5"
  },
  "lint-staged": {
    "apps/dashboard/src/**/*.{js,jsx,ts,tsx}": [
      "cd apps/dashboard && pnpm lint"
    ]
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
